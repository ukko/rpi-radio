###
### ~/.lircrc
###
begin irexec

# проговариваем время
begin
	button  = KEY_FN_1
	prog    = irexec
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --info=time
end

# проговариваем текущую композицию
begin
	button  = KEY_FN_2
	prog    = irexec
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --info=track
end

# установка / снятие таймера выключения
begin
	button  = KEY_EQUAL
	prog    = irexec
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --sleep=45
end

# Говорим название канала
begin
	prog    = irexec
	button  = KEY_CHANNEL
	config  = /home/pi/rpi-radio/rpi-radio.sh radio
end

# Переключение треков
begin
	button  = KEY_NEXT
	prog    = irexec
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --track=next
end

begin
	button  = KEY_PREVIOUS
	prog    = irexec
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --track=prev
end

# PLAY / PAUSE
begin
	button  = KEY_PLAYPAUSE
	prog    = irexec
	repeat  = 0
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --track=stop_play
end

# Громкость
begin
	button  = KEY_VOLUMEUP
	prog    = irexec
	repeat  = 2
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --volume=up
end

begin
	button  = KEY_VOLUMEDOWN
	prog    = irexec
	repeat  = 2
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --volume=down
end

# Переходим на канал и говорим название станции

begin
	prog    = irexec
	button  = KEY_NUMERIC_0
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=0
end

begin
	prog    = irexec
	button  = KEY_NUMERIC_1
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=1
end

begin
	prog    = irexec
	button  = KEY_NUMERIC_2
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=2
end

begin
	prog    = irexec
	button  = KEY_NUMERIC_3
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=3
end

begin
	prog    = irexec
	button  = KEY_NUMERIC_4
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=4
end

begin
	prog    = irexec
	button  = KEY_NUMERIC_5
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=5
end

begin
	prog    = irexec
	button  = KEY_6
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=6
end

begin
	prog    = irexec
	button  = KEY_7
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=7
end

begin
	prog    = irexec
	button  = KEY_8
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=8
end

begin
	prog    = irexec
	button  = KEY_9
	config  = /usr/bin/php /home/pi/rpi-radio/cli.php --play=9
end

end irexec
